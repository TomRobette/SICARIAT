{% extends "base.html.twig" %}

{% block title %}{{parent()}}NouvelArticle{% endblock %}

{% block contenu %}

<br>
    <div class="row justify-content-center">
      <form method="POST" action="index.php?page=ajoutarticle" class="col-xl-4 col-sm-8" enctype="multipart/form-data">

        <div class="form-group">
          <label for="inputTitre">Titre de l'article</label>
          <input type="text" name="inputTitre" class="form-control" id="inputTitre" placeholder="">
        </div>

        <div class="form-group">
          <label for="inputContenu">Contenu</label>
          <input type="text" name="inputContenu" class="form-control" id="inputContenu" placeholder="Le contenu de votre article">
        </div>

        <button type="submit" name="btPoster" id="btPoster" class="btn btn-primary">Poster</button>
      </form>
    </div>
{% endblock %}