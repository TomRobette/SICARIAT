{% extends "base.html.twig" %}

{% block title %}{{parent()}}Articles{% endblock %}

{% block contenu %}
<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    {% for article in liste %}
        <tr>
            <td>{{article.titre}}</td>
            <td>{{article.pseudo}}</td>
            <td><a>Derni√®re modification le 
            {% if article.dateModif!=null %}
                {{article.dateModif}}
            {% else %}
                {{article.dateCreation}}
            {% endif %}</a></td>
            <td><a href="index.php?page=article&id={{article.idArticle}}">Voir</a></td>
            <td><a>
            {% if article.nbVues!=null %}
                {{article.nbVues}} Vues
            {% endif %}</a></td>
        </tr>
    {% endfor %}

    </tbody>
</table>

</form>
{% set nb = form.nbpages %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center m-4 p-4">
            <li class="page-item {% if form.nopage == 0 %}disabled{% endif %}">
                <a class="page-link" href="index.php?page=listearticles&nopage={{ 0 }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% for i in 1..nb %}
                <li class="page-item {% if i ==form.nopage +1 %} active{% endif %}"><a class="page-link" href="index.php?page=listearticles&nopage={{ i-1 }}">{{ i }}<span class="sronly"></span></a></li>
            {% endfor %}
            <li class="page-item {% if form.nopage == form.nbpages-1 %}disabled{% endif %}">
                <a class="page-link" href="index.php?page=listearticles&nopage={{ nb-1 }}" aria-label="Next" >
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}