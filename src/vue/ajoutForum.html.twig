{% extends "base.html.twig" %}

{% block title %}{{parent()}}Nouveau Forum{% endblock %}

{% block contenu %}

<br>
    <div class="row justify-content-center">
      <form method="POST" action="index.php?page=ajoutforum" class="col-xl-4 col-sm-8" enctype="multipart/form-data">

        <div class="form-group">
          <label for="inputLibelle">Titre du forum</label>
          <input type="text" name="inputLibelle" class="form-control" id="inputLibelle" placeholder="">
        </div>
        
        <div class="form-group">
          <label for="inputDescription">Description</label>
          <textarea class="form-control rounded-0" name="inputDescription" id="inputDescription" rows="10"></textarea>
        </div>

        <button type="submit" name="btPoster" id="btPoster" class="btn btn-primary">Poster</button>
      </form>
    </div>
{% endblock %}